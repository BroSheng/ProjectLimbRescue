<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/purple_700</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_glass</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/signika_negative_bold</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PLRTheme">
        <item name="titleTextSize">20sp</item>
        <item name="rangeTitleTextSize">13sp</item>
        <item name="domainTitleTextSize">13sp</item>
        <item name="graphMarginTop">20dp</item>
        <item name="graphMarginBottom">40dp</item>
        <item name="graphMarginLeft">15dp</item>
        <item name="graphMarginRight">10dp</item>
        <item name="domainLineThickness">1dp</item>
        <item name="rangeLineThickness">1dp</item>
        <item name="domainOriginLineThickness">2dp</item>
        <item name="rangeOriginLineThickness">2dp</item>
        <item name="legendTextSize">15sp</item>
        <item name="legendIconHeight">15dp</item>
        <item name="legendIconWidth">15dp</item>
        <item name="legendHeight">25dp</item>
        <item name="legendAnchor">right_bottom</item>
        <item name="borderColor">@color/ap_transparent</item>
        <item name="gridInsetTop">1dp</item>
        <item name="gridInsetBottom">20dp</item>
        <item name="gridInsetLeft">25dp</item>
        <item name="gridInsetRight">1dp</item>
        <item name="lineLabels">left|bottom</item>
        <item name="lineLabelInsetTop">1dp</item>
        <item name="lineLabelInsetBottom">10dp</item>
        <item name="lineLabelInsetLeft">20dp</item>
        <item name="lineLabelInsetRight">1dp</item>
        <item name="lineLabelTextSizeTop">15sp</item>
        <item name="lineLabelTextSizeBottom">15sp</item>
        <item name="lineLabelTextSizeLeft">15sp</item>
        <item name="lineLabelTextSizeRight">15sp</item>
        <item name="lineLabelAlignLeft">right</item>
        <item name="lineLabelAlignRight">left</item>
        <item name="lineLabelAlignTop">left</item>
        <item name="lineLabelAlignBottom">right</item>
        <item name="lineLabelRotationBottom">-45</item>
        <item name="lineLabelRotationTop">-45</item>
        <item name="lineExtensionLeft">3dp</item>
        <item name="lineExtensionBottom">3dp</item>
    </style>
    <style name="PLRTheme.Dark">
        <item name="android:background">@color/ap_transparent</item>
        <item name="backgroundColor">@color/ap_transparent</item>
        <item name="graphBackgroundColor">@color/ap_transparent</item>
        <item name="gridBackgroundColor">@color/purple_glass</item>
        <item name="domainLineColor">@color/white</item>
        <item name="rangeLineColor">@color/white</item>
        <item name="domainOriginLineColor">@color/white</item>
        <item name="rangeOriginLineColor">@color/white</item>
        <item name="lineLabelTextColorTop">@color/white</item>
        <item name="lineLabelTextColorBottom">@color/white</item>
        <item name="lineLabelTextColorLeft">@color/white</item>
        <item name="lineLabelTextColorRight">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="domainTitleTextColor">@color/white</item>
        <item name="rangeTitleTextColor">@color/white</item>
        <item name="legendTextColor">@color/white</item>
        <item name="legendWidthMode">relative</item>
    </style>
</resources>